  <body>
    <main>
      <header>
        <div class="title">
          <img src="/icons/brand.png" width="55px" alt="" class="brand-img" />
          <h1 id="heading-text">Chitty Chat</h1>
        </div>
        <button type="button" class="hamberger-btn">
          <img src="/icons/hamberger.png" width="50px" alt="" />
        </button>
      </header>
      <div class="container">
        <div class="user-window">
          <div class="user-head">
            <h3>People</h3>

            <h4 id="user-count">0</h4>
          </div>
          <div class="user-list">
            <!-- <p>Pritam</p>
